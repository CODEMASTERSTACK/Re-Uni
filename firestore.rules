rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Users: any authenticated user can read profiles (for discovery/swipe feed); only own document writable.
    match /users/{userId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.auth.uid == userId;
    }
    // Config: read-only for all authenticated. Allow create for config/interests only when missing (app seeds it).
    match /config/interests {
      allow read: if request.auth != null;
      allow create: if request.auth != null && !exists(/databases/$(database)/documents/config/interests);
      allow update, delete: if false;
    }
    match /config/{doc} {
      allow read: if request.auth != null;
      allow write: if false;
    }
    // Swipes: actor can create/read own swipes; need to allow read for target for "who liked me".
    match /swipes/{swipeId} {
      allow read: if request.auth != null;
      allow create: if request.auth != null && request.resource.data.actorId == request.auth.uid;
      allow update, delete: if false;
    }
    // Matches: participants can read/update; create requires auth and being one of the pair.
    match /matches/{matchId} {
      allow create: if request.auth != null
        && (request.auth.uid == request.resource.data.user1Id || request.auth.uid == request.resource.data.user2Id);
      allow read, update, delete: if request.auth != null
        && (request.auth.uid == resource.data.user1Id || request.auth.uid == resource.data.user2Id);
    }
    // Chats: participants can read/update; create requires auth and being one of the pair.
    match /chats/{chatId} {
      allow create: if request.auth != null
        && (request.auth.uid == request.resource.data.user1Id || request.auth.uid == request.resource.data.user2Id);
      allow read, update, delete: if request.auth != null
        && (request.auth.uid == resource.data.user1Id || request.auth.uid == resource.data.user2Id);
      match /messages/{msgId} {
        allow read, write: if request.auth != null
          && (request.auth.uid == get(/databases/$(database)/documents/chats/$(chatId)).data.user1Id
              || request.auth.uid == get(/databases/$(database)/documents/chats/$(chatId)).data.user2Id);
      }
    }
    // OTPs: backend-only (Vercel API uses Admin SDK). Deny all client access.
    match /verification_otps/{doc} {
      allow read, write: if false;
    }
  }
}
